{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "username": {
      "type": "string",
      "minLength": 1
    },
    "firstName": {
      "type": "string",
      "minLength": 1
    },
    "lastName": {
      "type": "string",
      "minLength": 1
    },
    "password": {
      "type": "string",
      "minLength": 6
    },
    "email": {
      "type": "string",
      "format": "email"
    },
    "imageUrl": {
      "anyOf": [{ "type": "string", "format": "uri" }, { "type": "null" }]
    }
  },
  "additionalProperties": false
}
